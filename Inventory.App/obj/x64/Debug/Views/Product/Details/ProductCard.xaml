<UserControl x:ConnectionId='1'
    x:Class="Inventory.Views.ProductCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" d:DesignWidth="320" d:DesignHeight="600">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="12,6">
            <StackPanel Margin="0,12">
                <Grid  Margin="6" Height="180">
                    <Grid Background="LightGray">
                        <Image x:ConnectionId='15'                                                                                                      
                           Stretch="UniformToFill" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" />
                    </Grid>
                    <Button x:ConnectionId='12' Padding="0" BorderThickness="1" BorderBrush="White" Background="Transparent"                                                
                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                                               >
                        <Grid>
                            <Rectangle Fill="White" Opacity="0.75" />
                            <TextBlock x:ConnectionId='13' Text="Edit Photo" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"                                                        />
                            <Image x:ConnectionId='14'                                                                                                              
                               Stretch="UniformToFill" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                                                                                                                                                   />
                        </Grid>
                    </Button>
                </Grid>
                <TextBlock x:ConnectionId='11' Style="{StaticResource CardSuperHeader}" 
                                                                  
                           TextAlignment="Center" />
            </StackPanel>

            <Rectangle Style="{StaticResource CardSeparator}"/>
            <TextBlock Style="{StaticResource CardSection}" Text="General" />

            <TextBlock Style="{StaticResource CardHeader}" Text="Product ID" />
            <TextBlock x:ConnectionId='2' Style="{StaticResource CardText}"                                             />

            <TextBlock Style="{StaticResource CardHeader}" Text="Category" />
            <TextBlock x:ConnectionId='3' Style="{StaticResource CardText}"                                                />

            <TextBlock Style="{StaticResource CardHeader}" Text="Created On" />
            <TextBlock x:ConnectionId='4' Style="{StaticResource CardText}"                                                                                                 />
            
            <TextBlock Style="{StaticResource CardHeader}" Text="Last Update" />
            <TextBlock x:ConnectionId='5' Style="{StaticResource CardText}"                                                                                                      />

            <Rectangle Style="{StaticResource CardSeparator}"/>
            <TextBlock Style="{StaticResource CardSection}" Text="Price"  />

            <TextBlock Style="{StaticResource CardHeader}" Text="List Price" />
            <TextBlock x:ConnectionId='6' Style="{StaticResource CardText}"                                             />

            <TextBlock Style="{StaticResource CardHeader}" Text="Dealer Price" />
            <TextBlock x:ConnectionId='7' Style="{StaticResource CardText}"                                               />

            <TextBlock Style="{StaticResource CardHeader}" Text="Discount" />
            <TextBlock x:ConnectionId='8' Style="{StaticResource CardText}"                                            />

            <Rectangle Style="{StaticResource CardSeparator}"/>
            <TextBlock Style="{StaticResource CardSection}" Text="Stock"  />

            <TextBlock Style="{StaticResource CardHeader}" Text="Stock Units" />
            <TextBlock x:ConnectionId='9' Style="{StaticResource CardText}"                                              />

            <TextBlock Style="{StaticResource CardHeader}" Text="Safety Stock" />
            <TextBlock x:ConnectionId='10' Style="{StaticResource CardText}"                                                    />
        </StackPanel>
    </ScrollViewer>
</UserControl>

